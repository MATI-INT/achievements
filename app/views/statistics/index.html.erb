<h1>Category stats</h1>
<ul>
  <% @categories.each do |category| %>
    <li>
      <%= link_to "Show stats for category #{category.title}",
                  statistic_path(category.id) %>
    </li>
  <% end %>
</ul>

<h2>Visits by category</h2>
<%= column_chart @categories.map {|category|
  [category.title, category.visits.count]
} %>
